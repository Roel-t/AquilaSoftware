<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AquilaSoftware</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/v4-shims.css">

    @RenderSection("link", required: false)

</head>
<body>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="statusBar" class="bg-dark text-white fixed-bottom ">
            <div class="d-flex justify-content-around bd-highlight ">
                <div class="p-2 ">
                    <a class="btn btn-dark btn btn-block" asp-page="/DrivingScreen">
                        <div id="speed">
                            30mph<i class="fa fa-car" style="font-size:24px;"></i>
                        </div>
                    </a>
                </div>
                <div class="p-2">
                    <a class="btn btn-dark btn btn-block" asp-page="/EntryMenuScreen">
                        <div id="time">
                            12:00<i class="fas fa-home" style="font-size:24px;"></i>
                        </div>
                    </a>
                </div>
                <div class="p-2 ">
                    <a class="btn btn-dark btn btn-block" asp-page="/MediaScreen">
                        <div id="songname">
                            Song<i class="fa fa-music" style="font-size:24px;"></i>
                        </div>
                    </a>
                </div>
            </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
